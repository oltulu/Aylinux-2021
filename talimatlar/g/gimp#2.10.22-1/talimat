betik   = PYTHON=/usr/bin/python2 ./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/bin --enable-mp --enable-gimp-console --disable-gtk-doc --disable-check-update --disable-python --with-openexr --without-aa
