[sha256]

[derle]
betik 	=  cmake -D CMAKE_BUILD_TYPE=Release -D MAINTAINER_MODE=ON -D BUILD_WLAN=ON -D BUILD_IMLIB2=ON -D BUILD_CURL=ON -D BUILD_NCURSES=OFF -D BUILD_RSS=ON -D BUILD_WEATHER_METAR=ON -D BUILD_WEATHER_XOAP=ON -D BUILD_PULSEAUDIO=ON -D CMAKE_INSTALL_PREFIX=/usr -Wno-dev .
betik 	=  make

	      
