[derle]
betik = cd $SRC
betik = CFLAGS="${CFLAGS/-O2/-O3} -fno-semantic-interposition"
betik = LDFLAGS+=" -Wl,-Bsymbolic-functions"
betik = milis-meson mutter build --libexecdir /usr/lib/mutter-6 -D egl_device=true -D installed_tests=false -D profiler=false -D wayland_eglstream=true  -D xwayland_initfd=disabled
betik = meson compile -C build

    	      
[pakur]
betik = cd $SRC
betik = DESTDIR="${PKG}" meson install -C build
betik = rm -rf "${PKG}"/usr/{bin,share}
