betik   = sed -i configure -e"s; -Werror;;g"
betik  = ./configure --prefix=/usr --sysconfdir=/etc --sbindir=/usr/bin --with-udev-base-dir=/usr/lib/udev --localstatedir=/var --disable-static  -with-polkit=permissive  --enable-more-warnings=no --enable-gtk-doc=false
betik = sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
betik = make	

[pakur]
betik   = cd ModemManager-$surum
tip     = gnu
betik   = cd $SRC
