[paket]
tanim   = Poppler için Glib bağları
paketci = Cihan_Alkan
grup    = kütüphane
url     = http://poppler.freedesktop.org
arsiv   = poppler-$surum

[gerek]
derleme = cmake glib poppler lcms2
calisma =

[kaynak]
1       = $url/poppler-$surum.tar.xz

[sha256]
#1       = 434ecbbb539c1a75955030a1c9b24c7b58200b7f68d2e4269e29acf2f8f13336

[derle]
betik   = cd $SRC
betik   = mkdir $SRC/build
betik   = cd $SRC/build
betik   = cmake ../poppler-${surum} -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX:PATH=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib -DENABLE_UNSTABLE_API_ABI_HEADERS=ON -DENABLE_GTK_DOC=OFF
betik   = make

[pakur]
betik   = cd $SRC/build
betik   = make -C glib DESTDIR="${PKG}" install
betik   = install -m755 -d "${PKG}/usr/lib/pkgconfig"
betik   = install -m644 $SRC/build/poppler-glib.pc "${PKG}/usr/lib/pkgconfig/"
betik   = rm -vf "${PKG}"/usr/lib/libpoppler.*
betik   = rm -vf "${PKG}/usr/bin/poppler-glib-demo"
