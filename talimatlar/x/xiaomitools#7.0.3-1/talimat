[paket]
tanim   = ADB ve Fastboot kullanarak masaüstünde Xiaomi cihazlarını yönetmek için basit bir araç
paketci = Cihan_Alkan
grup 	  = araçlar
url     = https://szaki.github.io/XiaomiADBFastbootTools/

[gerek]
derleme = gradle
calisma = jre

[kaynak]
#1     = https://notabug.org/oltulu/Aylinux-Resimler/src/master/XiaomiADBFastbootTools.tar.xz
2= https://notabug.org/oltulu/Aylinux-Resimler/raw/master/xioamitools.tar.gz

[sha512]


[derle]
betik  = gradle build

	      
[pakur]
betik  = install -Dm755 xiaomitools-tools.sh "$PKG/usr/bin/xiaomitools"
betik  = install -Dm755 xiaomitools.desktop "$PKG/usr/share/applications/xiaomitools.desktop.desktop"
betik  = install -Dm644 "build/libs/XiaomiADBFastbootTools.jar" "$PKG/usr/share/java/$isim/xiaomitools.jar"
betik  = install -Dm644 "build/resources/main/icon.png" "$PKG/usr/share/pixmaps/xiaomitools.png"
