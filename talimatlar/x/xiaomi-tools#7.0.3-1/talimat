[paket]
tanim   = ADB ve Fastboot kullanarak masaüstünde Xiaomi cihazlarını yönetmek için basit bir araç
paketci = Cihan_Alkan
grup 	  = araçlar
url     = https://szaki.github.io/XiaomiADBFastbootTools/

[gerek]
derleme = gradle
calisma = jre

[kaynak]
1     = https://notabug.org/oltulu/Aylinux-Resimler/src/master/XiaomiADBFastbootTools.tar.xz

[sha512]


[derle]
betik  = gradle build

	      
[pakur]
betik  = install -Dm755 xiaomi-adb-fastboot-tools.sh "$PKG/usr/bin/xiaomi-adb-fastboot-tools"
betik  = install -Dm755 xiaomi-adb-fastboot-tools.desktop "$PKG/usr/share/applications/xiaomi-adb-fastboot-tools.desktop"
betik  = install -Dm644 "build/libs/XiaomiADBFastbootTools.jar" "$PKG/usr/share/java/$isim/$xiaomi-adb-fastboot-tools.jar"
betik  = install -Dm644 "build/resources/main/icon.png" "$PKG/usr/share/pixmaps/$xiaomi-adb-fastboot-tools.png"
